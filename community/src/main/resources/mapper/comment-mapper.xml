<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nowcoder.community.dao.CommentMapper">

    <sql id="selectField">
        id,user_id,entity_type,entity_id,content,target_id,status,create_time
    </sql>
    <sql id="insertField">
        user_id,entity_type,entity_id,content,target_id,status,create_time
    </sql>

    <select id="selectCommentByEntity" resultType="Comment">
        select <include refid="selectField"></include>
        from comment
        where entity_type = #{entityType} and entity_id = #{entityId} and status = 0
        order by create_time asc
        limit #{offset},#{limit}
    </select>

    <select id="selectCountByEntity" resultType="int">
        select count(id) from  comment
        where entity_type = #{entityType} and entity_id = #{entityId} and status = 0
    </select>

    <insert id="insertComment" parameterType="Comment" keyProperty="id">
        insert into comment (<include refid="insertField"></include>)
        values (#{userId},#{entityType},#{entityId},#{content},#{targetId},#{status},#{createTime})
    </insert>



</mapper>